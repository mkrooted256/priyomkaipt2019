<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".NewRecordFragment" android:id="@+id/newrecord_layout">
    <TextView
            android:text="Новий ФТІшник"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/linearLayout1"
            android:gravity="center_vertical">
        <TextView
                android:text="Призвіще"
                android:layout_width="60dp"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textCapWords"
                android:ems="10"
                android:id="@+id/nameInput1" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
            android:id="@+id/linearLayout2"
            android:gravity="center_vertical">
        <TextView
                android:text="Ім'я"
                android:layout_width="60dp"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textCapWords"
                android:ems="10"
                android:id="@+id/nameInput2" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:id="@+id/linearLayout3"
            android:gravity="center_vertical">
        <TextView
                android:text="По-батькові"
                android:layout_width="60dp"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textCapWords"
                android:ems="10"
                android:id="@+id/nameInput3" android:layout_weight="1"/>
    </LinearLayout>
    <Space
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/space1"/>
    <TextView
            android:text="Контакти"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/space1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:id="@+id/linearLayout5"
            android:gravity="center_vertical">
        <TextView
                android:text="Номер телефону"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phoneInput" android:layout_weight="1" android:hint="+380000000000"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" android:id="@+id/linearLayout6"
            android:gravity="center_vertical">
        <CheckBox
                android:text="Має телеграм"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/hasTgCheckbox" android:layout_weight="1"
                android:checked="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:ems="10"
                android:id="@+id/tgInput" android:layout_weight="1" android:hint=" @username"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout4"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
        <CheckBox
                android:text="Збігаєтсья з пропискою"
                android:layout_width="80dp"
                android:layout_height="100dp" android:id="@+id/sameAddressCheckbox"
                android:checked="true" android:layout_weight="1" android:paddingRight="8dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:ems="10"
                android:id="@+id/addressInput" android:inputType="textMultiLine" android:layout_weight="1"
                android:hint="Адреса з конверту"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:gravity="center_vertical" android:layout_marginTop="8dp" android:id="@+id/linearLayout7">
        <Button
                android:text="Очистити"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/newrecord_clear_btn" android:layout_weight="1"
                android:textSize="12sp" android:layout_marginRight="16dp"/>
        <Button
                android:text="Приректи!!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newrecord_proceed_btn"
                android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4" android:layout_marginEnd="8dp"
            android:gravity="center_vertical" android:visibility="invisible" android:id="@+id/newrecord_status_bar">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newrecord_status_text" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Зберігаємо..."/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>